{% extends "layout.jinja2" %}

{% block content %}

    {% if paginator.items %}

        <h2>Blog entries</h2>
        <ul>
        {% for entry in paginator.items %}
  				<div class="blog-post">
  					<h2 class="blog-post-title">{{ entry.title }}</h2>
  					<p class="blog-post-meta">{{ entry.created.strftime('%m-%d-%Y') }}</p>
  					{{ entry.body }}
  				</div>
        {% endfor %}
        </ul>
        {{ paginator.pager() |safe }}
    {% else %}
        <p>No blog entries found.</p>
    {% endif %}
{% endblock %}
